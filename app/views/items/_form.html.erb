<%= form_for(item) do |f| %>
  <div class="form-group">
    <%= f.text_field :name, class: 'form-control input-lg', placeholder: "名前を入力", size: 40 %>
  </div>
  <div class="form-group">
    <%= f.text_field :content, class: 'form-control input-lg', placeholder: "内容を入力", size: 40 %>
  </div>
  <div class="form-group">
    <%= f.file_field :image %>
  </div>
  <%= f.submit '持ち物を追加', class: 'btn btn-success btn-lg' %>
<% end %>